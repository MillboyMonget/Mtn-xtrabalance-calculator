<body>
  <div class="container">
    <h2>ðŸ“Š MTN Xtra Balance Calculator</h2>

    <label>Borrowed Amount (GHS):</label>
    <input type="number" id="borrow" step="0.01" placeholder="e.g. 100.00">

    <label>Number of Days (till repayment):</label>
    <input type="number" id="days" value="1" min="1">

    <label>Mobile Money Balance (Before Borrowing):</label>
    <input type="number" id="momo" step="0.01" placeholder="e.g. 50.00">

    <button onclick="calculate()">Calculate</button>

    <div id="result"></div>
  </div>

  <script>
    function roundUp(value) {
      return Math.ceil(value * 100) / 100; // round up to nearest pesewa
    }

    function calculate() {
      let borrow = parseFloat(document.getElementById("borrow").value);
      let days = parseInt(document.getElementById("days").value);
      let momo = parseFloat(document.getElementById("momo").value);

      if (isNaN(borrow) || borrow <= 0) {
        document.getElementById("result").innerHTML = "<b>Please enter a valid borrowed amount.</b>";
        return;
      }
      if (isNaN(momo)) momo = 0;

      // Access fee: 5.05% (rounded up)
      let fee = roundUp(borrow * 0.0505);

      // Daily interest: 0.5% of principal * days (rounded per day)
      let dailyInterest = 0;
      for (let i = 0; i < days; i++) {
        dailyInterest += roundUp(borrow * 0.005);
      }

      let totalRepayment = borrow + fee + dailyInterest;
      let newBalance = momo + borrow - totalRepayment;

      document.getElementById("result").innerHTML = `
        <p><span class="highlight">Borrowed:</span> GHS ${borrow.toFixed(2)}</p>
        <p><span class="highlight">Access Fee (5.05%):</span> GHS ${fee.toFixed(2)}</p>
        <p><span class="highlight">Interest (${days} day${days>1?"s":""}):</span> GHS ${dailyInterest.toFixed(2)}</p>
        <hr>
        <p><span class="highlight">Total Repayment:</span> GHS ${totalRepayment.toFixed(2)}</p>
        <p><span class="highlight">Extra Cost:</span> GHS ${newBalance.toFixed(2)}</p>
      `;
    }
  </script>
